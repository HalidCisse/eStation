<Page x:Class="EStation.Views.Common.ComingSoon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600">

    <DockPanel >
        <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Name="_BACK_BUTTON" Content="&#xf0a8;" Grid.Column="0" Width="30" Margin="0,0,0,0" FontSize="30" Height="30" Style="{DynamicResource ToolButtonStyle}" ToolTip="Retour" HorizontalAlignment="Center" Click="BACK_BUTTON_OnClick"/>
            <TextBlock Grid.Column="1" Name="_TITLE_TEXT" Text="Coming Soon ................" Foreground="LightGray" Margin="10,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Light" FontSize="25" FontFamily="{StaticResource DefaultFontFamily}"/>
        </Grid>

        <Image Source="{StaticResource ComingSoonIcon}"/>
    </DockPanel>
</Page>
